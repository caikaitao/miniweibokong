<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_item_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/abs__ab_bottom_solid_dark_holo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="testname"
                android:textColor="@android:color/holo_red_light"
                android:textSize="16sp" />
	
          

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="TextView"
            android:autoLink="web"
             android:focusable="false"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightgrey"
            android:orientation="vertical" >
            
			<include layout="@layout/weibo_item_zhuanfa"/>
          </LinearLayout>
       
		<ImageView
                android:id="@+id/iv_item_msg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/abs__ab_solid_dark_holo" />
		  <TextView
		      android:id="@+id/tv_item_source"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		       android:textSize="12sp"
		       android:textStyle="italic"
              
		      android:text="来自" />
		
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015.0.0"
        android:textSize="12sp" />

</LinearLayout>